<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Init</servlet-name>
        <servlet-class>work.aijiu.servlet.TaskServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Init</servlet-name>
        <url-pattern>/nichaoba</url-pattern>
    </servlet-mapping>

    <!-- Spring监听器 -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:spring.xml</param-value>
    </context-param>
    <!-- 查看数据源 -->
    <servlet>
        <servlet-name>DruidStatView</servlet-name>
        <servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DruidStatView</servlet-name>
        <url-pattern>/druid/*</url-pattern>
    </servlet-mapping>
    <!--处理乱码-->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--页面servlet-->
    <!--任务调度-->
    <servlet>
        <servlet-name>task</servlet-name>
        <servlet-class>work.aijiu.servlet.TaskServlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>task</servlet-name>
        <url-pattern>/task/*</url-pattern>
    </servlet-mapping>
    <!--汽车信息-->
    <servlet>
        <servlet-name>carinfo</servlet-name>
        <servlet-class>work.aijiu.servlet.CarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>carinfo</servlet-name>
        <url-pattern>/carinfo/*</url-pattern>
    </servlet-mapping>
    <!--汽车分类信息-->
    <servlet>
        <servlet-name>cartypeinfo</servlet-name>
        <servlet-class>work.aijiu.servlet.CartypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cartypeinfo</servlet-name>
        <url-pattern>/cartypeinfo/*</url-pattern>
    </servlet-mapping>
    <!--品牌信息-->
    <servlet>
        <servlet-name>model</servlet-name>
        <servlet-class>work.aijiu.servlet.ModelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>model</servlet-name>
        <url-pattern>/modelinfo/*</url-pattern>
    </servlet-mapping>
    <!--驾驶员信息-->
    <servlet>
        <servlet-name>driver</servlet-name>
        <servlet-class>work.aijiu.servlet.DriverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>driver</servlet-name>
        <url-pattern>/driver/*</url-pattern>
    </servlet-mapping>
    <!--驾驶证类型-->
    <servlet>
        <servlet-name>drivertype</servlet-name>
        <servlet-class>work.aijiu.servlet.DrivertypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>drivertype</servlet-name>
        <url-pattern>/drivertype/*</url-pattern>
    </servlet-mapping>
    <!--罚单信息-->
    <servlet>
        <servlet-name>infraccion</servlet-name>
        <servlet-class>work.aijiu.servlet.InfraccionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>infraccion</servlet-name>
        <url-pattern>/infraccion/*</url-pattern>
    </servlet-mapping>
    <!--部门信息-->
    <servlet>
        <servlet-name>depart</servlet-name>
        <servlet-class>work.aijiu.servlet.DepartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>depart</servlet-name>
        <url-pattern>/depart/*</url-pattern>
    </servlet-mapping>
    <!--用户信息-->
    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>work.aijiu.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <!--菜单信息-->
    <servlet>
        <servlet-name>menu</servlet-name>
        <servlet-class>work.aijiu.servlet.MenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>menu</servlet-name>
        <url-pattern>/menu/*</url-pattern>
    </servlet-mapping>
    <!--油卡信息-->
    <servlet>
        <servlet-name>card</servlet-name>
        <servlet-class>work.aijiu.servlet.CardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>card</servlet-name>
        <url-pattern>/card/*</url-pattern>
    </servlet-mapping>
    <!--加油日志-->
    <servlet>
        <servlet-name>cardlog</servlet-name>
        <servlet-class>work.aijiu.servlet.CardlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cardlog</servlet-name>
        <url-pattern>/cardlog/*</url-pattern>
    </servlet-mapping>
    <!--系统监控-->
    <servlet>
        <servlet-name>system</servlet-name>
        <servlet-class>work.aijiu.servlet.SystemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>system</servlet-name>
        <url-pattern>/system/*</url-pattern>
    </servlet-mapping>
    <!--工作流程-->
    <servlet>
        <servlet-name>approver</servlet-name>
        <servlet-class>work.aijiu.servlet.ApproverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>approver</servlet-name>
        <url-pattern>/approver/*</url-pattern>
    </servlet-mapping>
    <!--调度-->
    <servlet>
        <servlet-name>dispatch</servlet-name>
        <servlet-class>work.aijiu.servlet.DispatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatch</servlet-name>
        <url-pattern>/dispatch/*</url-pattern>
    </servlet-mapping>
    <!--search-->
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>work.aijiu.servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search/*</url-pattern>
    </servlet-mapping>
    <!--过滤器-->
    <filter>
        <filter-name>filter</filter-name>
        <filter-class>work.aijiu.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
</web-app>